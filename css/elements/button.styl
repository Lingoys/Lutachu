.btn
  border 0
  outline 0
  border 0
  color #fff
  cursor pointer
  text-align center
  padding .35em 1.2em
  text-decoration none
  color color-btn
  display inline-block
  vertical-align middle
  background-color background-btn
  background-image none
  transition box-shadow .2s linear

  [class*=icon-]:before
    transform scale(1.2)

  &:hover
    box-shadow 1px 1px 3px rgba(0, 0, 0, .2)

  &.btn-active,
  &:active
    box-shadow 1px 1px 3px rgba(0, 0, 0, .4)

  &.btn-default,
  &.btn-primary,
  &.btn-secondary,
  &.btn-success,
  &.btn-warning,
  &.btn-error
    color #fff

    [class*=icon-]:before
      color #fff

    &:hover
      box-shadow inset 0 0 6px 2px rgba(0, 0, 0, .24), 1px 1px 3px rgba(0, 0, 0, .2)

    &.btn-active,
    &:active
      box-shadow inset 0 0 8px 1px rgba(15, 15, 15, .34), 1px 1px 5px rgba(0, 0, 0, .4)

  &.btn-default
    background-color background-btn-default

    &:hover
      box-shadow inset 0 0 8px 3px rgba(255, 255, 255, .2), 1px 1px 3px rgba(0, 0, 0, .2)

    &.btn-active,
    &:active
      box-shadow inset 0 0 8px 1px rgba(255, 255, 255, .2), 1px 1px 5px rgba(0, 0, 0, .4)

  &.btn-primary
    background-color background-btn-primary

  &.btn-secondary
    background-color background-btn-secondary

  &.btn-success
    background-color background-btn-success

  &.btn-error
    background-color background-btn-error

  &.btn-warning
    background-color background-btn-warning

  &.btn-disabled,
  &[disabled]
    &,
    &:hover,
    &:active
      border 0
      opacity .6
      box-shadow none
      cursor not-allowed

  &.btn-radius
    border-radius 3px

  &.btn-round
    border-radius 100000px

  &.btn-xl
    font-size 1.4rem

  &.btn-lg
    font-size 1.2rem

  &.btn-sm
    font-size .8rem

  &.btn-xs
    font-size .6rem