btn-bgcolor(n, l = 6, d = 4)
  &
    background-color: n;

  &:hover
    background-color: lighten(n, l);

  &.z-active,
  &:active
    background-color: darken(n, d);

  &.z-disabled,
  &[disabled]
    &,
    &:hover,
    &:active
      border: 0;
      opacity: .6;
      background: n;
      box-shadow: none;
      cursor: not-allowed;

.m-btn
  border: 0;
  outline: 0;
  margin: .225em;
  cursor: pointer;
  background: #fff;
  border-radius: 2px;
  text-align: center;
  line-height: 1.5em;
  padding: .35em 1.2em;
  text-decoration: none;
  display: inline-block;
  vertical-align: middle;
  box-shadow: 0 0 1px rgba(0, 0, 0, .4);
  transition: background .4s ease, box-shadow .2s ease
  
  &:hover
    box-shadow: 0 0px 3px rgba(0, 0, 0, .4);
  
  &:active,
  &:focus
    background-color: #f5f5f5;
    box-shadow: 0 1px 3px rgba(0, 0, 0, .4);

  [class*=icon-]:before
    transform scale(1.2)

  &.z-primary,
  &.z-secondary,
  &.z-success,
  &.z-warning,
  &.z-error
    color #fff

    [class*=icon-]:before
      color #fff

  &.z-primary
    btn-bgcolor #198ac8

  &.z-secondary
    btn-bgcolor #4eb3e9

  &.z-success
    btn-bgcolor #19c856

  &.z-error
    btn-bgcolor #E63752

  &.z-warning
    btn-bgcolor #E8CB2C

  &.z-ghost
    color: #fff;
    box-shadow: none;
    border: 1px solid;
    background-color: transparent;
    text-shadow: 1px 1px 0 rgba(0, 0, 0, .6);

    &:hover
      color: #fff;
      border: 1px solid;
      background-color rgba(255, 255, 255, .3)

    &:active
      color: #fff;
      border: 1px solid;
      background-color rgba(255, 255, 255, .6)

    &:visited
      color: #fff;

  &.z-xl
    font-size 150%

  &.z-lg
    font-size 125%

  &.z-sm
    font-size 75%

  &.z-xs
    font-size 50%