tt,
code,
pre
  font-family: font-family['monospace'];

tt,
code
  font-size: .8em;
  margin: 0 .3em;
  padding: .1em .5em;
  border-radius: 3px;
  word-break: break-all;
  background: color['light-grey'];
  border: 1px solid color['grey'];

pre
  display block;
  overflow auto;
  margin 1.6em 0;
  font-size .9em;
  line-height 1.5;
  padding-left: 1.3rem;
  color: color['gray'];
  border-left: 2px solid color['grey'];

  code,
  tt
    padding: 0;
    border: none;
    font-size: 1rem;
    background: none;

blockquote
  padding-left: 1.3rem;
  margin: 0 0 1.6rem 0;
  font-size: .9rem;
  line-height: 1.62;
  color: color['gray'];
  border-left: 2px solid color['grey'];

  small
    color: color['grey'];
    display: block;
    text-align: right;

  a
    color: color['grey'];

  p
    margin-bottom: .5em;
    &:last-child
      margin-bottom: 0;