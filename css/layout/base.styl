// Position

.absolute
  position absolute

.relative
  position relative

.fixed
  position fixed

// Border Radius

.squre
  border-radius 0

.circle
  border-radius 50%

.radius
  border-radius 3px

.round
  border-radius 100000000000px

// Float

.left
  float left

.right
  float right

.clearfix
  clearfix()

// Text & Block

.center
  center()

// Display

.block
  display block !important

.inline
  display inline !important

.inline-block
  display inline-block !important

.hide
  display none !important
  visibility hidden !important

// Text

.overhide
  overflow hidden

// Font-family

.serif
  font-family font-family-serif

.kai
  font-family font-family-kai

.monospace
  font-family font-family-monospace

// Align

.text-left
  text-align left !important

.text-right
  text-align right !important

.text-center
  text-align center !important

.text-top
  vertical-align top !important

.text-middle
  vertical-align middle !important

.text-bottom
  vertical-align bottom !important

.text-truncate
  word-wrap normal /* for IE */
  text-overflow ellipsis
  white-space nowrap
  overflow hidden

.text-norwap
  word-wrap normal /* for IE */
  white-space nowrap
  overflow hidden

.text-break
  word-wrap break-word
  word-break break-all

// Align

.align-right,
.align-left
  display inline

.align-left
  float left
  margin-right .5em

.align-right
  float right
  margin-left .5em

// Width

.full
  width 100%

.max-full
  max-width 100%

// Color

