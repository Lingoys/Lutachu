.row
  center()
  clearfix()

  margin-top 1em
  margin-left -1em
  margin-right -1em

[class*=grid-u-]
  float left
  padding 0 1em
  display inline

for n in 1..12
  .grid-u-{n}
    width (n/12) * 100 + '%'

  .grid-ml-{n}
    margin-left (n/12) * 100 + '%'

  // AVG Grid
  .grid-avg-{n}
    > li
      width (1/n) * 100 + '%'

@media (max-width: 767px)
  [class*=grid-u-]
    display block
    float none
    width auto