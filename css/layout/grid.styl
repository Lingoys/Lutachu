.{ns}grid
  center()
  clearfix()

  margin-top 1em
  margin-left -1em
  margin-right -1em

  &.fixed
    max-width 1120px

[class*={ns}unit-]
  float left
  padding 1em
  display inline

for f in 1..gridMaxColumn
  for n in 1..f
    if f == gridMaxColumn
      .{ns}unit-{n}-{f},
      .{ns}unit-{n}
        width (n/f) * 100 + '%'

        &.{ns}ml-{n}-{f},
        &.{ns}unit-{n}
          margin-left (n/f) * 100 + '%'
    else
      .{ns}unit-{n}-{f}
        width (n/f) * 100 + '%'

        &.{ns}ml-{n}-{f}
          width (n/f) * 100 + '%'

  // AVG Grid
  .{ns}avg-{f}
    > li
      width (1/f) * 100 + '%'

@media (max-width: 700px)
  [class*={ns}unit-]
    display block
    float none
    width auto