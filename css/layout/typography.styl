*,
*:before
*:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  color color-normal
  font 400 font-size/1.82 font-family

body,
article,
summary
  counter-reset lutitleh2 lutitleh3 lutitleh4 lutitleh5 lutitleh6

// Titles

h1,
h2,
h3,
h4,
h5,
h6
  color color-normal
  font-family font-family

h1
  margin-top 0

h2
  font-size 1.5em
  margin .83em 0

h3
  font-size 1.17em
  margin 1em 0

h4,
h5,
h6
  font-size 1em
  margin 1.6em 0 1em 0

/*
 * Code From Entry CSS
 */

.title-counter
  h1
    text-align center

  h2
    counter-reset lutitleh3 lutitleh4 lutitleh5 lutitleh6

    &:before
      content counter(lutitleh2) '\3000'
      content counter(lutitleh2, cjk-ideographic) '、'
      counter-increment lutitleh2

  h3
      counter-reset lutitleh4 lutitleh5 lutitleh6

      &:before
        content counter(lutitleh2) '.' counter(lutitleh3) '\3000'
        counter-increment lutitleh3

  h4
    counter-reset lutitleh5 lutitleh6

    &:before
      content counter(lutitleh2) '.' counter(lutitleh3) '.' counter(lutitleh4) '\3000'
      counter-increment lutitleh4

  h5
    counter-reset lutitleh6

    &:before
      content counter(lutitleh2) '.' counter(lutitleh3) '.' counter(lutitleh4) '.' counter(lutitleh5) '\3000'
      counter-increment lutitleh5

  h6
    &:before
      content counter(lutitleh2) '.' counter(lutitleh3) '.' counter(lutitleh4) '.' counter(lutitleh5) '.' counter(lutitleh6) '\3000'
      counter-increment lutitleh6

  h6
    font-weight 500

p
  margin-top 0
  margin-bottom 1.46em
  letter-spacing .2px

  &.text-author
    display block
    text-align right
    font-weight 800

    &:before
      content '——' !important

.text-indent p:before
  content '\3000\3000'
  display inline

a
  -moz-text-decoration-color rgba(0, 0, 0, .6)
  text-decoration-color rgba(0, 0, 0, .6)

  img
    border 0

// Symbol

b,
em,
cite,
strong
  color color-normal
  font-weight 700

em,
cite
  font-style normal

em
  font-style inherit
  font-weight inherit
  text-decoration inherit
  -webkit-text-emphasis filled circle
  -moz-text-emphasis filled circle
  -ms-text-emphasis filled circle
  text-emphasis filled circle
  -webkit-text-emphasis-position under
  -moz-text-emphasis-position under
  -ms-text-emphasis-position under
  text-emphasis-position under

i
  color color-normal
  font-style italic

img
  margin .2em 0

sub,
sup
  a
    text-decoration none

hr
  width 15%
  display block
  border 0 none
  margin 2em auto
  border-top width-border solid color-border

// List

ul,
ol
  margin 0 0 24px 6px
  padding-left 24px

ul
  list-style-type square

ol
  list-style-type decimal

li
  margin-bottom .2em

  ul,
  ol
    margin-top 0
    margin-bottom 0
    margin-left 14px

  ul
    list-style-type disc

    ul
      list-style-type circle

  p
    margin .4em 0 .6em

    &:before
      content none

// DT

dl
  margin-bottom .2em

dt
  padding 0
  font-weight 800

dd
  margin-left 0

dt + dd
  margin-top .2em

dd + dt
  margin-top .6em

// Title ~ *
h1,
h2,
h3,
h4,
h5,
h6
  + *
    margin-top -.8em

[draggable]
  cursor move

// Key Board Log
kbd
  padding 2px 4px
  font-size 90%
  color #fff
  background-color #333
  border-radius 3px
  box-shadow inset 0 -1px 0 rgba(0, 0, 0, .25)