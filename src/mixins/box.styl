// Float

clearfix()
  &:before
  &:after
    content " "
    display table

  &:after
    clear both

// Center

center()
  display block

  margin-left auto
  margin-right auto

// Size

size(w, h)
  width w
  height h

square(w)
  size w, w

circle(w)
  square w
  border-radius 50%
