@require "../variables"

/**
 * Create a normal button
 *
 * @param color background color
 */
make-button(color)
  border: 0
  outline: 0

  cursor: pointer
  border-radius: border-radius-width

  text-align: center

  padding: .1em 1em
  display: inline-block
  vertical-align: middle

  transition: background .3s ease

  set-button-color: color

  &[disabled]
  &.-disabled
    opacity: .6
    border: 0

    cursor: not-allowed
    user-select: none


/**
 * Set color of normal button
 *
 * @param color background color
 */
set-button-color(color)
  if dark(color)
    color: #fff

  background-color: color

  &:hover
    background-color: lighten(color, 4)

  &:active
    background-color: darken(color, 4)

  &[disabled]
  &.-disabled
    background-color: color
