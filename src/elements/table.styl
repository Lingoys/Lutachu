@require "../variables"

table
  line-height: 1.6

  margin-bottom: 2.5rem
  border-spacing: 0
  border-collapse: collapse

  th
  td
    padding: 1rem
    vertical-align: top
    border-top: 1px solid table-border-color

    &[scope="row"]
      color: color-gray

  thead
    th
    td
      vertical-align: bottom
      border-bottom: .2rem solid table-border-color

  tbody + tbody
    tr:first-child
      td
        border-top: .2rem solid table-border-color

  .is-active
    &
    & > th
    & > td
     background-color: table-active-background

.table
  width: 100%

  &.is-bordered
    border: .1rem solid table-border-color

    th
    td
      border-left: .1rem solid table-border-color

      &:first-child
        border-left: 0

  &.is-striped
    tbody
      tr:nth-child(odd)
        background-color: table-striped-background

  &.is-hover
    tbody
      tr:hover
        background-color: table-hover-background