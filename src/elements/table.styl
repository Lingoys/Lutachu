@require "../variables"

table
  margin-bottom: 1.5em
  border-spacing: 0
  border-collapse: collapse

  th
  td
    padding: .7rem
    
    line-height: 1.6    
    vertical-align: top

    border-top: 1px solid color-border-light

    &[scope="row"]
      color: color-gray

  thead
    th
    td
      border-top: 0
      vertical-align: bottom
      border-bottom: 1px solid color-border-light

  tbody + tbody
    tr:first-child
      td
        border-top: 2px solid color-border-normal

tr.active
  th
  td
    border-left-color: color-border-mark !important
    background-color: color-background-table-mark !important        

.table
  width: 100%

.table-bordered
  border: 1px solid color-border-light

  th
  td
    border-left: 1px solid color-border-light

    &:first-child
      border-left: 0

.table-striped
  tbody
    tr:nth-child(odd)
      th
      td
        background-color: color-background-table

.table-hover
  tbody
    tr:hover
      th
      td
        background-color: color-background-table-hover

.table-center
  th
  td
    text-align: center

.table-responsive
  min-hieght: .01%
  overflow-x: auto

  @media mq-mobile
    width: 100%
    overflow-y: hidden
