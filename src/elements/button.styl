@require "../variables"
@require "../mixins/button"

.button
  color: button
  make-button: #fff

  text-decoration: none
  box-shadow: button-border-color 0 0 0 1px inset

  [class*=icon-]
    margin-right: .2rem
    display: inline-block
    vertical-align: bottom

  color-name = "primary" "secondary" "success" "error" "warning"
  color-value = primary secondary success error warning

  &.is-outline
    color: #fff
    background-color: transparent

    &:hover
      background: rgba(255, 255, 255, .3)

    &:active
      background: rgba(255, 255, 255, .6)

  for color, i in color-name
    &.is-{color}
      box-shadow: none

      set-button-color: color-value[i]

    &.is-outline.is-{color}
      color: color-value[i]

      &:hover
        background: alpha(color-value[i], .3)

      &:active
        background: alpha(color-value[i], .6)

  &.is-outline
    background: transparent
    box-shadow: 0 0 0 1px inset

  &.is-block
    width: 100%

  &.is-large
    font-size: 125%

  &.is-small
    font-size: 75%
