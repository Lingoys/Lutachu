@require "../variables"
@require "../mixins/button"

.button
  make-button: #fff

  text-decoration: none
  box-shadow: button-border-color 0 0 0 1px inset

  [class*=icon-]
    margin-right: .2rem
    display: inline-block
    vertical-align: bottom

  color-name = "primary" "secondary" "success" "error" "warning"
  color-value = primary secondary success error warning

  &.is-outline
    make-outlined-button: #fff

  for color, i in color-name
    &.is-{color}
      set-button-color: color-value[i]

    &.is-{color}-outline
      make-outlined-button: color-value[i]

  &.is-block
    width: 100%

  &.is-large
    font-size: 125%

  &.is-small
    font-size: 75%
