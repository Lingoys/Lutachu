@require "../variables"
@require "../mixins/button"

.button
  make-button: #fff

  [class*=icon-]
    margin-right: .5em
    transform: scale(1.5)

  &.-primary
    set-button-color: color-primary

  &.-secondary
    set-button-color: color-secondary

  &.-success
    set-button-color: color-success

  &.-error
    set-button-color: color-error

  &.-warning
    set-button-color: color-warning

  &.-ghost
    make-ghost-button: #fff

    &.-primary
      set-ghost-button-color: color-primary

    &.-secondary
      set-ghost-button-color: color-secondary

    &.-success
      set-ghost-button-color: color-success

    &.-error
      set-ghost-button-color: color-error

    &.-warning
      set-ghost-button-color: color-warning

  &.-xl
    font-size: 1.5em

  &.-lg
    font-size: 1.25em

  &.-sm
    font-size: .75em

  &.-xs
    font-size: .5em
