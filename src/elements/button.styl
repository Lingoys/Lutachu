@import "../variables"
@import "../mixins/button"

.btn
  Btn: #fff color-normal

  &.btn-primary
    BtnColor: color-primary #fff

  &.btn-secondary
    BtnColor: color-secondary #fff

  &.btn-success
    BtnColor: color-success #fff

  &.btn-error
    BtnColor: color-error #fff

  &.btn-warning
    BtnColor: color-warning #fff

  &.btn-ghost
    color: #fff
    box-shadow: none
    border: 1px solid
    background-color: transparent
    text-shadow: 1px 1px 0 rgba(0, 0, 0, .6)
    box-shadow: inset 0px 0px 2px rgba(0, 0, 0, .6)

    &.hover,
    &:hover
      color: #fff
      border: 1px solid
      background-color: rgba(0, 0, 0, .3)

    &.active,
    &:active
      color: #fff
      border: 1px solid
      background-color: rgba(0, 0, 0, .6)

    &:visited
      color: #fff

  &.btn-xl
    font-size: 150%

  &.btn-lg
    font-size: 125%

  &.btn-sm
    font-size: 75%

  &.btn-xs
    font-size: 50%
