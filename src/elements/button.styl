@require "../variables"
@require "../mixins/button"

.btn
  makeBtn: #fff color-normal

  &.btn-primary
    btnColor: color-primary #fff

  &.btn-secondary
    btnColor: color-secondary #fff

  &.btn-success
    btnColor: color-success #fff

  &.btn-error
    btnColor: color-error #fff

  &.btn-warning
    btnColor: color-warning #fff

  &.btn-ghost
    color: #fff
    box-shadow: none

    border: 2px solid
    background-color: transparent

    border-radius: 3px

    text-shadow: 1px 1px 0 rgba(0, 0, 0, .6)
    box-shadow: inset 0px 0px 2px rgba(0, 0, 0, .6)

    &.hover,
    &:hover
      color: #fff

      border: 2px solid
      background-color: rgba(0, 0, 0, .3)

    &.active,
    &:active
      color: #fff

      border: 2px solid
      background-color: rgba(0, 0, 0, .6)

    &:visited
      color: #fff

  &.btn-xl
    font-size: 150%

  &.btn-lg
    font-size: 125%

  &.btn-sm
    font-size: 75%

  &.btn-xs
    font-size: 50%
