@require "../variables"
@require "../mixins/button"

.button
  color: button
  make-button: #fff

  text-decoration: none

  [class*=icon-]
    margin-right: .2rem
    display: inline-block
    vertical-align: bottom

  color-name = "primary" "secondary" "success" "error" "warning"
  color-value = primary secondary success error warning

  &.is-outline
    color: #fff
    background-color: transparent

    &:hover
      background: rgba(255, 255, 255, .3)

    &:active
      background: rgba(255, 255, 255, .6)

  for color, i in color-name
    &.is-{color}
      set-button-color: color-value[i]

    &.is-outline.is-{color}
      color: color-value[i]

      &:hover
        background: alpha(color-value[i], .3)

      &:active
        background: alpha(color-value[i], .6)

  &.is-outline
    background: transparent
    box-shadow: 0 0 0 1px inset

  &.is-block
    width: 100%

  &.is-large
    font-size: 125%

  &.is-small
    font-size: 75%

.button-group
  display: flex
  flex-wrap: wrap

  .button
    flex: 1 0 auto

    &:first-child
      border-top-right-radius: 0
      border-bottom-right-radius: 0

    &:not(:first-child):not(:last-child)
      border-radius: 0

    &:not(:first-child)
      margin-left: -.1rem

      border-top-left-radius: 0
      border-bottom-left-radius: 0
