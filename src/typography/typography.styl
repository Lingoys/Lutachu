@require "../variables"

body
  font-weight: 400

  color: color-normal
  font-family: font-family-normal

  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.text-indent p::before
  content: "\3000\3000"
  display: inline

p
  margin-top: 0
  margin-bottom: 1em

  line-height: 1.86

  word-break: break-all

  &.text-author
    display: block
    text-align: right
    font-weight: 800

    &::before
      content: '——' !important

a
  color: color-link

  img
    border: 0

img
  max-width: 100%

// Symbol

b
cite
strong
  color: color-normal
  font-weight: bold

  a
    color: inherit

i
  font-style: italic

img
  margin: .2em 0

sub
sup
  a
    text-decoration: none

hr
  display: block
  border: 0 none
  margin: 2em auto
  border-top: 1px solid color-border-normal

  + h1
  + h2
  + h3
  + h4
  + h5
  + h6
    margin-top: -.4em

abbr[title]
dfn[title]
  cursor: help
  border-bottom: 1px dotted

dl
  margin-bottom: .2em

dt
  padding: 0
  font-weight: 800

dd
  margin-left: 0

dt + dd
  margin-top: .2em

dd + dt
  margin-top: .6em

[draggable]
  cursor: move

mark
  color: color-normal

  background: #FFFCC4
  border-bottom: 1px solid #ffedce

kbd
  color: #fff
  font-size: 90%

  padding: 2px 4px
  border-radius: 3px

  background-color: #333

  font-family: font-family-monospace
  box-shadow: inset 0 -1px 0 rgba(0, 0, 0, .25)

  kbd
    padding: 0
