@require "../variables"

html
  font-size: 62.5%

body
  font-size: 1.6em
  font-weight: 400

  letter-spacing: .01em

  line-height: 1.6

  color: color-normal
  font-family: font-family-normal

  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.text-indent p::before
  content: "\3000\3000"
  display: inline

p
  line-height: 1.86

  word-break: break-all

  &.text-author
    display: block
    text-align: right
    font-weight: 800

    &::before
      content: '——' !important

a
  color: color-link

  img
    border: 0

img
  max-width: 100%

pre
blockquote
dl
figure
table
p
ul
ol
form
  margin-bottom: 2.5rem

b
cite
strong
  color: color-normal

  a
    color: inherit

img
  margin: .2em 0

hr
  display: block
  border: 0 none
  margin: 2em auto
  border-top: 1px solid color-border-normal

  + h1
  + h2
  + h3
  + h4
  + h5
  + h6
    margin-top: -.4em

abbr[title]
dfn[title]
  cursor: help
  border-bottom: 1px dotted

dt
  padding: 0
  font-weight: 800

dd
  margin-left: 0

dt + dd
  margin-top: .2em

dd + dt
  margin-top: .6em

[draggable]
  cursor: move

mark
  color: color-normal

  background: #FFFCC4
  border-bottom: 1px solid #ffedce

tt
kbd
code
pre
samp
  font-size: 1em
  font-family: font-family-monospace

kbd
  color: #fff
  font-size: 90%

  padding: 2px 4px

  font-family: font-family-monospace
  box-shadow: inset 0 -1px 0 rgba(0, 0, 0, .25)

  kbd
    padding: 0
