@require "../variables"

tt
code
  margin: 0 .2rem
  word-break: break-all

pre
  display block
  overflow auto

  padding: .8em 1.5rem

  color: pre-color
  background: pre-background-color

  border-left: pre-border-style pre-border-width pre-border-color

  code
  tt
    margin: 0

kbd
  color: kbd-color

  font-size: kbd-font-size
  font-family: font-family-monospace

  padding: 2px 4px

  background: kbd-background-color

  border-radius: border-radius-width
  box-shadow: inset 0 -1px 0 kbd-box-shadow-color

  kbd
    padding: 0
