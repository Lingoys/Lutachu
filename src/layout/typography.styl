@import "../variables"

body
  font-size: 105%
  font-weight: 400

  color: color-normal
  font-family: font-family-normal

  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

h1,
h2,
h3,
h4,
h5,
h6
  font-weight: 100
  line-height: 1.625

  margin-top: 1.2em
  margin-bottom: .6em

  color: color-normal
  font-family: font-family-sans-serif

h1
  font-size: 2em

h2
  font-size: 1.8em

h3
  font-size: 1.6em

h4
  font-size: 1.2em

h5,
h6
  font-size: 1em

.text-counter
  counter-reset: ch2 ch3 ch4 ch5 ch6

  h1
    text-align: center

  h2
    counter-reset: ch3 ch4 ch5 ch6

    &:before
      content: counter(ch2) '\3000'
      content: counter(ch2, cjk-ideographic) '、'
      counter-increment: ch2

  h3
      counter-reset: ch4 ch5 ch6

      &:before
        content: counter(ch2) '.' counter(ch3) '\3000'
        counter-increment: ch3

  h4
    counter-reset: ch5 ch6

    &:before
      content: counter(ch2) '.' counter(ch3) '.' counter(ch4) '\3000'
      counter-increment: ch4

  h5
    counter-reset: ch6

    &:before
      content: counter(ch2) '.' counter(ch3) '.' counter(ch4) '.' counter(ch5) '\3000'
      counter-increment: ch5

  h6
    &:before
      content: counter(ch2) '.' counter(ch3) '.' counter(ch4) '.' counter(ch5) '.' counter(ch6) '\3000'
      counter-increment: ch6

  h6
    font-weight: 500

p
  margin-top: 0
  margin-bottom: .5em

  line-height: 1.88

  text-align: justify
  text-justify: ideographic
  letter-spacing: .3px

  word-break: break-all

  &.text-author
    display: block
    text-align: right
    font-weight: 800

    &:before
      content: '——' !important

.text-indent p:before
  content: '\3000\3000'
  display: inline

a
  color: color-link

  -moz-text-decoration-color: rgba(0, 0, 0, .6)
  text-decoration-color: rgba(0, 0, 0, .6)

  img
    border: 0

img
  max-width: 100%

// Symbol

b,
em,
cite,
strong
  color: color-normal
  font-weight: 700

  a
    color: inherit

em,
cite
  font-style: normal

  a
    font-style: normal

em
  font-style: inherit
  font-weight: inherit
  text-decoration: inherit
  -webkit-text-emphasis: filled circle
  -moz-text-emphasis: filled circle
  -ms-text-emphasis: filled circle
  text-emphasis: filled circle
  -webkit-text-emphasis-position: under
  -moz-text-emphasis-position: under
  -ms-text-emphasis-position: under
  text-emphasis-position: under

i
  color: color-normal
  font-style: italic

img
  margin: .2em 0

sub,
sup
  a
    text-decoration: none

hr
  width: 20%
  display: block
  border: 0 none
  margin: 2em auto
  border-top: 2px solid color-border-normal

abbr[title],
dfn[title]
  cursor: help
  border-bottom: 1px dotted

// List

ul,
ol
  margin: 0 0 24px 6px
  padding-left: 24px

ul
  list-style-type: square

ol
  list-style-type: decimal

li
  margin-bottom: .2em

  ul,
  ol
    margin-top: 0
    margin-bottom: 0
    margin-left: 14px

ul li
  ul li
    list-style-type: disc

    ul li
      list-style-type: circle

ol li
  ol li
    list-style-type: upper-roman

    ol li
      list-style-type: lower-roman
  p
    margin: .4em 0 .6em

    &:before
      content: none

// DT

dl
  margin-bottom: .2em

dt
  padding: 0
  font-weight: 800

dd
  margin-left: 0

dt + dd
  margin-top: .2em

dd + dt
  margin-top: .6em

[draggable]
  cursor: move

// Key Board Log
kbd
  color: #fff
  font-size: 90%
  padding: 2px 4px
  border-radius: 3px
  background-color: #333
  font-family: font-family-monospace
  box-shadow: inset 0 -1px 0 rgba(0, 0, 0, .25)

  kbd
    padding: 0

// Figure

figure
  text-align: center

  &.left,
  &.right
    width: 50%

  figcaption:after
    content: ''
    width: 15%
    display: block
    margin: 1em auto .2em
    color: color-dark-grey
    border-bottom: 1px solid color-border-normal

@media mq-mobile
  figure
    &.left,
    &.right
      width: 100%
      margin: 0
      padding: 1em 40px
      float: none!important
