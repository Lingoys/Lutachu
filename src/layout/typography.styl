a
  color: color['link'];

h1,
h2,
h3,
h4,
h5,
h6
  color: color['normal'];

h1
  margin-top: 0;
  margin-bottom: .2em;
  font-size: 2.6em;

h2
  margin: .23em 0;
  font-size: 2.15em;

h3
  margin: .5em 0;
  font-size: 1.7em;

h4
  margin: .6em 0;
  font-size: 1.25em;

h5
  margin: 1em 0;
  font-size: 1em;

h6
  margin: 1.25em 0;
  font-size: .85em;

.text-counter
  counter-reset: titleh2 titleh3 titleh4 titleh5 titleh6;

  h1
    text-align: center;

  h2
    counter-reset: titleh3 titleh4 titleh5 titleh6;

    &:before
      content: counter(titleh2) '\3000';
      content: counter(titleh2, cjk-ideographic) '、';
      counter-increment: titleh2;

  h3
      counter-reset: titleh4 titleh5 titleh6;

      &:before
        content: counter(titleh2) '.' counter(titleh3) '\3000';
        counter-increment: titleh3;

  h4
    counter-reset: titleh5 titleh6;

    &:before
      content: counter(titleh2) '.' counter(titleh3) '.' counter(titleh4) '\3000';
      counter-increment: titleh4;

  h5
    counter-reset: titleh6;

    &:before
      content: counter(titleh2) '.' counter(titleh3) '.' counter(titleh4) '.' counter(titleh5) '\3000';
      counter-increment: titleh5;

  h6
    &:before
      content: counter(titleh2) '.' counter(titleh3) '.' counter(titleh4) '.' counter(titleh5) '.' counter(titleh6) '\3000';
      counter-increment: titleh6;

  h6
    font-weight: 500;

p
  margin-top: 0;
  margin-bottom: 1em;
  letter-spacing: .3px;

  &.text-author
    display: block;
    text-align: right;
    font-weight: 800;

    &:before
      content: '——' !important;

.text-indent p:before
  content: '\3000\3000';
  display: inline;

a
  -moz-text-decoration-color: rgba(0, 0, 0, .6);
  text-decoration-color: rgba(0, 0, 0, .6);

  img
    border: 0;

img
  max-width: 100%;

// Symbol

b,
em,
cite,
strong
  color: color['normal'];
  font-weight: 700;

em,
cite
  font-style: normal;

em
  font-style: inherit;
  font-weight: inherit;
  text-decoration: inherit;
  -webkit-text-emphasis: filled circle;
  -moz-text-emphasis: filled circle;
  -ms-text-emphasis: filled circle;
  text-emphasis: filled circle;
  -webkit-text-emphasis-position: under;
  -moz-text-emphasis-position: under;
  -ms-text-emphasis-position: under;
  text-emphasis-position: under;

i
  color: color['normal'];
  font-style: italic;

img
  margin: .2em 0;

sub,
sup
  a
    text-decoration: none;

hr
  width: 15%;
  display: block;
  border: 0 none;
  margin: 2em auto;
  border-top: 2px solid color['border-normal'];

// List

ul,
ol
  margin: 0 0 24px 6px;
  padding-left: 24px;

ul
  list-style-type: square;

ol
  list-style-type: decimal;

li
  margin-bottom: .2em;

  ul,
  ol
    margin-top: 0;
    margin-bottom: 0;
    margin-left: 14px;

ul li
  ul li
    list-style-type: disc;

    ul li
      list-style-type: circle;

ol li
  ol li
    list-style-type: upper-roman;

    ol li
      list-style-type: lower-roman;
  p
    margin: .4em 0 .6em;

    &:before
      content: none;

// DT

dl
  margin-bottom: .2em;

dt
  padding: 0;
  font-weight: 800;

dd
  margin-left: 0;

dt + dd
  margin-top: .2em;

dd + dt
  margin-top: .6em;

// Title ~ *
h1,
h2,
h3,
h4,
h5,
h6
  + *
    margin-top: -.8em;

[draggable]
  cursor: move;

// Key Board Log
kbd
  color: #fff;
  font-size: 90%;
  padding: 2px 4px;
  border-radius: 3px;
  background-color: #333;
  font-family: font-family['monospace'];
  box-shadow: inset 0 -1px 0 rgba(0, 0, 0, .25);
  
  kbd
    padding: 0;