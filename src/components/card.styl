@require "../variables"

.card
  position: relative

  padding: 0
  background: #fff

  border-radius: border-radius-width

  box-shadow: 0 1px 2px 1px rgba(0, 0, 0, .2)

  .card-image
    figure
      margin: 0

      text-align: inherit

    img
      margin: 0

      width: 100%
      display: block

  .card-content
    padding: 2rem
