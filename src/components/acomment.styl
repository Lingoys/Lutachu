@require "../variables"

.acommets
  position: relative

.comment
  right: -15px
  width: 120rem

  font-size: .9em
  padding-top: .4em

  position: absolute

  margin-right: -@width

  word-break: break-word

  &:before
    top: 0
    left: 0
    width: 40%
    content: ''
    position: absolute
    border-top: .2rem solid color-dark-grey

  &.-left
    left: -15px
    right: auto
    text-align: right
    margin-right: 0
    margin-left: -120px

    &:before
      right: 0
      left: auto

  @media mq-non-desktop
    position: static
    margin-right: 0

    &.-left
      margin: 0

    &:before
      border: 0
      content: ' ('
      position: static
      padding-left: 5px

    &:after
      content: ') '
