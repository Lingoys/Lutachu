.nav
  width: 100%
  z-index: 1000
  background-color: rgba(0, 0, 0, .4)

  &.is-fixed
    top: 0
    left: 0

  a
    color: #fff
    line-height: 3rem

    text-decoration: none

  a.band
    font-weight: bold

  .container
    min-height: 3rem

  ul.group
    margin: 0 !important

    li
      float: left
      margin: 0
      list-style: none
      transition: .3s ease;

      a
        display: block
        padding: 0 .85em

      &::hover
        background-color: rgba(0, 0, 0, .2)

      &.is-active
      &::active
        background-color: rgba(0, 0, 0, .6)
