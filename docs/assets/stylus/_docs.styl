.is-docs
  #main
    margin-top: 3rem

    h2 + p
      font-size: 1.8rem
      margin-top: -1.5rem

  #sidebar
    flex: 1
    padding-left: 2rem

    a
      color: #99979c
      display: block
      padding: .25rem 0

      transition: .3s ease

      &:hover
        color: #0275d8

    .active > a
      color: #55595c
      font-weight: 700

    .nav
      font-size: 1.4rem
      line-height: 2.3rem
      margin: .2rem 0 .8rem

  .toc-item

    &:not(.active)
      .nav
        display: none

  #search
    margin: 0 0 2rem

  #search-input
    margin: 0
    width: 100%

  @media screen and (max-width: 40rem)
    #content
      order: 2

.is-tied
  .column
    padding: 0 2rem 0 0

  h3
    margin: 0 0 .5rem

  p
    margin: 0
    line-height: 1.625

  .button
    margin-top: 1.5rem
